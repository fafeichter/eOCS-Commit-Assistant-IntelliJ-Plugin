<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.fafeichter.eocs.commit_assistant</id>
    <name>eOCS Commit Assistant</name>
    <vendor>Fabian Feichter</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.vcs</depends>
    <depends>Git4Idea</depends>

    <resource-bundle>messages.plugin</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.github.fafeichter.eocs.commit_assistant.settings.AppSettingsState"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.github.fafeichter.eocs.commit_assistant.settings.AppSettingsConfigurable"
                id="com.github.fafeichter.eocs.commit_assistant.settings.AppSettingsConfigurable"
                displayName="eOCS Commit Assistant"/>
        <checkinHandlerFactory
                implementation="com.github.fafeichter.eocs.commit_assistant.ui.commit.CommitMessageHandlerFactory"/>
        <notificationGroup
                id="eocs-commit-assistant-errors"
                displayType="BALLOON"/>
    </extensions>

</idea-plugin>